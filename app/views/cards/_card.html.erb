    <p>
        <strong>Details:</strong>
        <%= card.details %>
    </p>
<% end %>

<p>
    <strong>Date IN:</strong>
    <%= card.dateIn %>
</p>

<p>
    <strong>Date OUT:</strong>
    <%= card.dateOut %>
</p>

